<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controllers.LoginController"
      stylesheets="@../styles/app.css"
      prefHeight="400.0" prefWidth="500.0">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="ðŸ›’ Online Shopping" styleClass="header-label" style="-fx-font-size:28px;"/>
    <Label text="Welcome back! Please login to continue." style="-fx-text-fill: #b0b0b0; -fx-font-size: 12px;"/>
    
    <VBox spacing="15" style="-fx-padding: 20 0 0 0;">
        <TextField fx:id="usernameField" promptText="Username" prefWidth="300" style="-fx-pref-height: 40;"/>
        <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300" style="-fx-pref-height: 40;"/>
    </VBox>

    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" prefWidth="300" style="-fx-pref-height: 45; -fx-font-size: 14px;"/>

    <Label fx:id="messageLabel" style="-fx-text-fill: #ff6b6b; -fx-font-size: 12px;"/>

</VBox>